<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DontLetMeExpire.MainPage">

    <Grid RowDefinitions="100,100,auto,*,48" ColumnDefinitions="*,*" RowSpacing="16" ColumnSpacing="16">
        <BoxView Grid.Row="0" BackgroundColor="DarkGray"></BoxView>
        <BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="Green"></BoxView>
        <BoxView Grid.Row="1" Grid.Column="0" BackgroundColor="Orange"></BoxView>
        <BoxView Grid.Row="1" Grid.Column="1" BackgroundColor="Red"></BoxView>
        <Label Grid.Row="2"
               Grid.ColumnSpan="2"
               FontSize="24"
               Margin="0,8,0,0"
               Text="Meine Lagerorte"></Label>
        <VerticalStackLayout Grid.Row="3" Grid.ColumnSpan="2" Spacing="2">
            <BoxView BackgroundColor="DarkGray" HeightRequest="5"></BoxView>
            <BoxView BackgroundColor="DarkGray" HeightRequest="5"></BoxView>
            <BoxView BackgroundColor="DarkGray" HeightRequest="5"></BoxView>
        </VerticalStackLayout>
        <Button Grid.Row="4" BackgroundColor="#3d6ddc" Text="Eintrag hinzufügen"></Button>
        <Button Grid.Row="4" BorderColor="#3d6ddc" BorderWidth="1" TextColor="#3d6ddc" BackgroundColor="White" Grid.Column="1" Text="Neuen Ort anlegen"></Button>
    </Grid>

</ContentPage>
